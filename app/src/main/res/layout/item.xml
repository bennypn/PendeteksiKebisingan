<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210sp"
    android:background="@drawable/status">

    <TextView
        android:id="@+id/epoch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="26/06/2022  14:20"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/link_iv"
        app:layout_constraintStart_toStartOf="@+id/link_iv"
        app:layout_constraintTop_toBottomOf="@+id/link_iv" />

    <TextView
        android:id="@+id/db_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="90"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/epoch_tv"
        app:layout_constraintStart_toStartOf="@+id/epoch_tv"
        app:layout_constraintTop_toBottomOf="@+id/epoch_tv" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="db"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/db_tv"
        app:layout_constraintStart_toEndOf="@+id/db_tv"
        app:layout_constraintTop_toTopOf="@+id/db_tv" />

    <ImageView
        android:id="@+id/link_iv"
        android:layout_width="198dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.195"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>